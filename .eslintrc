{
	"root": true,
	"extends": [
		"airbnb-base"
	],
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"rules": {
		"one-var": 1,
		"no-restricted-globals": 1,
		"indent": [
			"error",
			2
		],
		"one-var-declaration-per-line": 0,
		"import/no-named-as-default": 0,
		"new-cap": 0,
		"consistent-return": 0,
		"no-param-reassign": 0,
		"comma-dangle": 0,
		"curly": [
			"error",
			"multi-line"
		],
		"prefer-destructuring": [ "error", { "object": false, "array": false } ],
		"max-len": [
			1,
			80,
			2
		],
		"import/no-unresolved": [
			2,
			{
				"commonjs": true
			}
		],
		"no-shadow": [
			"error",
			{
				"allow": [
					"req",
					"res",
					"err"
				]
			}
		],
		"require-jsdoc": [
			"error",
			{
				"require": {
					"FunctionDeclaration": true,
					"MethodDefinition": true,
					"ClassDeclaration": true
				}
			}
		]
	}
}
